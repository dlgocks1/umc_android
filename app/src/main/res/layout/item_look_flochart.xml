<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/look_flochart_album_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/img_album_exp2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/look_flochart_album_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/look_flochart_album_iv"
        app:layout_constraintTop_toTopOf="@id/look_flochart_album_iv" />

    <TextView
        android:id="@+id/look_flochart_album_title_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="잠이 안온다"
        android:textColor="@color/black"
        android:singleLine="true"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/look_flochart_album_singer_tv"
        app:layout_constraintStart_toEndOf="@+id/look_flochart_album_tv"
        app:layout_constraintTop_toTopOf="@+id/look_flochart_album_iv" />

    <TextView
        android:id="@+id/look_flochart_album_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="젠(Zen)"
        android:textColor="@color/gray"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/look_flochart_album_title_tv"
        app:layout_constraintTop_toBottomOf="@id/look_flochart_album_title_tv" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/icon_browse_arrow_right_1"
        app:layout_constraintBottom_toBottomOf="@+id/look_flochart_album_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/look_flochart_album_title_tv"
        app:layout_constraintTop_toTopOf="@+id/look_flochart_album_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>