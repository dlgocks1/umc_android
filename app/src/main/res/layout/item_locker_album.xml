<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:riv_corner_radius="15sp"
        android:id="@+id/locker_savedalbumitem_img_iv"
        android:src="@drawable/img_album_exp2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locker_savedalbumitem_title_tv"
        android:text="GREAT!"
        app:layout_constraintBottom_toTopOf="@+id/locker_savedalbumitem_singer_tv"
        app:layout_constraintStart_toStartOf="@+id/locker_savedalbumitem_singer_tv"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locker_savedalbumitem_singer_tv"
        android:text="모모랜드 (MOMORAND)"
        app:layout_constraintTop_toTopOf="@+id/locker_savedalbumitem_img_iv"
        app:layout_constraintBottom_toBottomOf="@+id/locker_savedalbumitem_img_iv"
        app:layout_constraintStart_toEndOf="@+id/locker_savedalbumitem_img_iv"
        android:textSize="13sp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locker_savedalbumitem_info_tv"
        android:text="2021.03.25 | 정규 | 댄스 팝"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/locker_savedalbumitem_singer_tv"
        app:layout_constraintStart_toStartOf="@+id/locker_savedalbumitem_singer_tv"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/locker_savedalbumitem_play_tv"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_player_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/locker_savedalbumitem_img_iv"
        app:layout_constraintBottom_toBottomOf="@+id/locker_savedalbumitem_img_iv"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:id="@+id/locker_savedalbumitem_info_iv"
        android:background="@drawable/btn_miniplayer_play"
        app:layout_constraintEnd_toStartOf="@+id/locker_savedalbumitem_play_tv"
        app:layout_constraintTop_toTopOf="@+id/locker_savedalbumitem_play_tv"
        />


</androidx.constraintlayout.widget.ConstraintLayout>