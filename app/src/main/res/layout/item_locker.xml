<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_locker"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"

    >

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/locker_savedsong_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/home_mainimg_22"
        android:layout_marginStart="20dp"
        app:riv_corner_radius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/locker_savedsong_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"

        app:layout_constraintTop_toTopOf="@+id/locker_savedsong_iv"
        app:layout_constraintStart_toEndOf="@+id/locker_savedsong_iv"
        app:layout_constraintBottom_toTopOf="@+id/locker_savedsong_singer_tv"

        android:text="어쩌구 저쩌구"/>

    <TextView
        android:id="@+id/locker_savedsong_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/song_gray"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxWidth="250dp"
        app:layout_constraintTop_toBottomOf="@+id/locker_savedsong_title_tv"
        app:layout_constraintBottom_toBottomOf="@+id/locker_savedsong_iv"
        app:layout_constraintStart_toEndOf="@+id/locker_savedsong_iv"
        android:text="Sprasd"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/locker_savedsong_info_iv"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_player_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/locker_savedsong_iv"
        app:layout_constraintTop_toTopOf="@+id/locker_savedsong_iv"
        />
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/locker_savedsong_play_iv"
        android:background="@drawable/btn_miniplayer_play"
        app:layout_constraintEnd_toStartOf="@+id/locker_savedsong_info_iv"
        app:layout_constraintTop_toTopOf="@+id/locker_savedsong_iv"
        app:layout_constraintBottom_toBottomOf="@+id/locker_savedsong_iv"

        />


</androidx.constraintlayout.widget.ConstraintLayout>